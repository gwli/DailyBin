#!/usr/bin/env python
# -*- coding:utf-8 -*-

def main():
    unit_list = [
      ("1byte", 1),
      ("2byte", 2),
      ("4byte", 4),
      ("8byte", 8),
      ("32byte", 32),
      ("128byte", 128),
      ("256byte", 256),
      ("512", 512),
      ("1K", 1024),
      ("64K", 1024*64),
      ("1M", 1024*1024),
      ("64M",1024*1024*64), 
      ("512M",1024*1024*512), 
      ("1G",1024*1024*1024), 
      ("2G",1024*1024*1024*2), 
      ("3G",1024*1024*1024*3), 
      ("4G",1024*1024*1024*4), 
      ("8G",1024*1024*1024*8), 
      ("16G",1024*1024*1024*16) 
    ]

    for (unit,size) in unit_list:
        print("{}:{}".format(unit,hex(size)))


if __name__ == "__main__":
   main() 
