# -*- coding:utf-8 -*-
import multiprocessing
import os
import logging
import time
import subprocess
logging.basicConfig(level=logging.DEBUG)
logger=logging.getLogger(__name__)
logger.setLevel(logging.DEBUG)
import pprint 
pp=pprint.PrettyPrinter(indent=4)
import urllib


def firefox(urllist):
    def wrapper():
        cmd = "firefox -new-tag aa {} ".format(" ".join(urllist()))
        logger.debug(cmd)
        os.system(cmd)
        #subprocess.Popen(cmd)
    return wrapper

def google(urllist):
    cmd = "firefox -new-tag aa {} ".format(" ".join(urllist))
    logger.debug(cmd)
    os.system(cmd)
    #subprocess.call('firefox',cmd,shell=False)
      
def search(keypoints):
    match_list = [urllib.quote(keypoints)+urllib.quote(i) for i in [" 本质"," 近义词"," 同义词"," 組成"," 分类"," site:zhihu.com"," site:guokr.com"]]
    logger.info(match_list)
    prefix = "https://www.google.com.hk/search?safe=strict&site=&source=hp&q="
    url_list = map(lambda x:"\"{}{}\"".format(prefix,x),match_list)
    google(url_list) 

if __name__ == "__main__":
    search("自我")
