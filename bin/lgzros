def how_to_ipc():
    rst = """
    Rosbridge : it use JSON API to communicate with non-ROS programs.
    you can install apt-get install ros-indigo-rosbridge-suite
    """
    return rst

def how_to_install():
    rst = """
    just downlaod the source to src 
    catkin_make
    catkin_make install
    http://wiki.ros.org/ati_force_torque
    """
    return rst

def how_to_setup_env():
    rst ="""
    source /opt/ros/<branch>/setup.xx 
    mkdir -p ~/catkin_ws/src
    cd ~/catkin_ws/src
    catkin_init_workspace
    catkin_make
    """
    return rst 
 
def catkin_is():
    rst = """
    A CMake-based build system that is used to build all packages in ROS
    """
    return rst

def framework_is():
    rst =u"""
    #. 计算图极,node,message,topic,service
    #. package,stack
    #. node just as process
    """
    return rst

def how_to_run():
    rst = u"""
    #. start master ``roscore``
    #. roslaunch xxxxx  xxxxx.launch
    #. rosrun rviz -d `rospack find xxx`/sim_furete.vcg
    #. rostopic pub -r /cmd_vel geometry_msgs/Twist "{linear:{x:0.2,y:0,z:0},angular(x:0,y:0:z:0.5}' 

    """
    return rst

